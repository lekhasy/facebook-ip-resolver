<UserControl x:Class="ModernUINavigationApp1.Pages.BasicPage1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Paste the host name that need to be resolved here"/>
                <TextBox Name="textboxaddress"/>
                <TextBlock/>
                <Button Width="94" Name="button" HorizontalAlignment="Left" Click="Button_Click">Resolve</Button>
                <TextBlock/>
                <TextBlock Text="here is result:"/>
                <TextBox Name="textboxresult"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
